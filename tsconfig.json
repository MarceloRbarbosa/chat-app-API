{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests", "coverage", "vitest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
